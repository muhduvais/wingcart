                        </div>
                            <div class="" id="account-change-password">
                                <form id="change-pass-form">
                                    <div class="card-body pb-2">
                                        <h3 class="edit-profile-heading">Change Password</h3>
                                        <p class="main-error text-danger"></p>
                                        <div class="form-group">
                                            <label class="form-label errorMsg">Current password</label>
                                            <input type="password" name="curr-password" id="curr-password" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label errorMsg">New password</label>
                                            <input type="password" name="new-password" id="new-password" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label errorMsg">Repeat new password</label>
                                            <input type="password" name="conf-password" id="conf-password" class="form-control">
                                        </div>
                                        <div class="text-right mt-3">
                                            <p class="profileMsg"></p>
                                            <button type="submit" class="btn btn-primary" id="change-pass-btn">Submit</button>&nbsp;
                                            <a href="/userProfile"><button type="button" class="btn btn-primary">Cancel</button></a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const form = document.getElementById('change-pass-form');
        const currPassword = document.getElementById('curr-password');
        const newPassword = document.getElementById('new-password');
        const confPassword = document.getElementById('conf-password');

        form.addEventListener('submit', (e) => {
            e.preventDefault();

            validatePassword();
        });

        const setError = (element, message) => {
        const formGroup = element.parentElement;
        const errorDisplay = formGroup.querySelector('.errorMsg');

        errorDisplay.innerText = message;
        element.classList.add('error');
        errorDisplay.classList.add('error');
        element.classList.remove('success');
        errorDisplay.classList.remove('success');

}; 

        const setSuccess = (element, message) => {
        const formGroup = element.parentElement;
        const errorDisplay = formGroup.querySelector('.errorMsg');

        errorDisplay.innerText = message;
        element.classList.add('success');
        errorDisplay.classList.add('success');
        element.classList.remove('error');
        errorDisplay.classList.remove('error');

};

        const validatePassword = async () => {
            
            const currPasswordValue = currPassword.value.trim();
            const newPasswordValue = newPassword.value.trim();
            const confPasswordValue = confPassword.value.trim();

            let isValid = true;

            if(!currPasswordValue) {
                setError(currPassword, 'Please enter your current password');
                isValid = false;
            } else {
                setSuccess(currPassword, "Current Password");
            }

            if(!newPasswordValue) {
                setError(newPassword, 'Please enter a new password');
                isValid = false;
            } else if (newPasswordValue.length < 8) {
                setError(newPassword, 'The length of the password should be at least 8');
                isValid = false;
            } else {
                setSuccess(newPassword, "New Passsword");
            }

            if(!confPasswordValue) {
                setError(confPassword, 'Please confirm the password');
                isValid = false;
            } else if (newPasswordValue !== confPasswordValue) {

                const mainError = document.querySelector('.main-error');
                mainError.innerText = 'Passwords do not match!';

                newPassword.classList.add('error');
                confPassword.classList.add('error');
                newPassword.classList.remove('success');
                confPassword.classList.remove('success');

                isValid = false;
            } else {
                setSuccess(confPassword, "Confirm Password");
            }

            if (!isValid) {
                return;
            }

            const response = await fetch('/changePassword', {
                method: "PATCH",
                headers: {
                    'content-type': 'application/json'
                },
                body: JSON.stringify({
                    password: currPasswordValue,
                    newPassword: newPasswordValue
                })
            });

            const passData = await response.json();

            if(response.ok && !passData.success) {
                const mainError = document.querySelector('.main-error');
                mainError.innerText = passData.message;

                currPassword.classList.add('error');
                currPassword.classList.remove('success');
                return;
            }
            else {
                const errorDisplay = document.querySelector('.errorMsg');
                errorDisplay.classList.add('success');
                errorDisplay.classList.remove('error');
            }
            
            if(passData.success) {

                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: 'Password changed successfully'
                }).then(() => {
                    window.location.href = '/userProfile';
                });
            }

        }


    </script>

    <!-- Sweet Alert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
