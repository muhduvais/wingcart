<div class="row justify-content-center my-5">
    <div class="col-md-8">
      <form id="addProduct" class="form-horizontal" action="/admin/editProduct/<%= locals.product ? product._id: '' %>" method="post" enctype="multipart/form-data">
        <fieldset>
          <div class="row">
            <!-- Left column -->
            <div class="col-md-6">
              <!-- Text input for Product Name -->
              <div class="form-group">
                <label class="control-label" for="productName">Product Name</label>
                <input id="productName" name="productName" class="form-control" type="text" value="<%= locals.product ? product.name : '' %>" required>
              </div>
  
              <!-- Text input for Model -->
              <div class="form-group">
                <label class="control-label" for="model">Model</label>
                <input id="model" name="model" class="form-control" type="text" value="<%= locals.product ? product.model : '' %>" required>
              </div>
  
              <!-- Textarea for Description -->
              <div class="form-group">
                <label class="control-label" for="description">Description</label>
                <textarea id="description" name="description" class="form-control" rows="3" required><%= locals.product ? product.description : '' %></textarea>
              </div>
  
              <!-- Dropdown for Type -->
              <div class="form-group">
                <label class="control-label" for="type">Type</label>
                <select id="type" name="type" class="form-control" required>
                  <option value="" disabled>-Select-</option>
                  <option value="Digital" <%= locals.product && product.type === "Digital" ? "selected" : "" %>>Digital</option>
                  <option value="Analog" <%= locals.product && product.type === "Analog" ? "selected" : "" %>>Analog</option>
                  <option value="Digital & Analog" <%= locals.product && product.type === "Digital & Analog" ? "selected" : "" %>>Digital & Analog</option>
                </select>
              </div>
  
              <!-- Text input for Strap Type -->
              <div class="form-group">
                <label class="control-label" for="strapType">Strap Type</label>
                <input id="strapType" name="strapType" class="form-control" type="text" value="<%= locals.product ? product.strapType : '' %>" required>
              </div>
            </div>
  
            <!-- Right column -->
            <div class="col-md-6">
              <!-- Text input for Color -->
              <div class="form-group">
                <label class="control-label" for="color">Color</label>
                <input id="color" name="color" class="form-control" type="text" value="<%= locals.product ? product.color : '' %>" required>
              </div>
  
              <div class="form-group">
                <label class="control-label" for="category">Category</label>
                <select id="category" name="category" class="form-control" required>
                  <option value="" disabled>-Select-</option>
                  <% if (locals.categories && categories.length) { %>
                    <% categories.forEach((category) => { %>
                      <option value="<%= category._id %>" <%= locals.product && product.category.toString() === category._id.toString() ? "selected" : "" %>>
                        <%= category.name %>
                      </option>
                    <% }) %>
                  <% } %>
                </select>
              </div>
  
              <!-- Dropdown for Brand -->
              <div class="form-group">
                <label class="control-label" for="brand">Brand</label>
                <select id="brand" name="brand" class="form-control" required>
                  <option value="" selected disabled>-Select-</option>
                  <% if (locals.brands && brands.length) { %>
                    <% brands.forEach((brand) => { %>
                        <option value="<%= brand._id %>" <%= locals.product && product.brand.toString() === brand._id.toString() ? "selected" : "" %>>
                          <%= brand.name %>
                        </option>
                    <% }) %>
                  <% } %>
                </select>
              </div>
  
              <!-- Text input for Stock -->
              <div class="form-group">
                <label class="control-label" for="stock">Stock</label>
                <input id="stock" name="stock" class="form-control" type="number" value="<%= locals.product ? product.stock : '' %>" required>
              </div>

          <!-- Text input for Price -->
          <div class="form-group">
            <label class="control-label" for="price">Price</label>
            <input id="price" name="price" class="form-control" type="number" value="<%= locals.product ? product.price : '' %>" required>
          </div>
        </div>
      </div>
    </div>
