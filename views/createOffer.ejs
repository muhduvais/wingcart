    <script>
      document.addEventListener('DOMContentLoaded', () => {
          // Assuming you are injecting these variables from your server-side code
          const products = <%- JSON.stringify(products) %>;
          const categories = <%- JSON.stringify(categories) %>;
      
          // Initialize Choices.js
          const itemSelect = new Choices('#item', {
              removeItemButton: true,
              searchEnabled: true,
              shouldSort: false
          });
      
          document.getElementById('type').addEventListener('change', function() {
              const type = this.value;
              const itemRow = document.getElementById('itemRow');
      
              // Clear previous choices and selected items
              itemSelect.clearChoices();
              itemSelect.clearStore(); // Clear stored values if any
              itemSelect.removeActiveItems(); // Remove any active items
      
              if (type === 'products') {
                  const productChoices = products.map(product => ({
                      value: product._id,
                      label: product.name
                  }));
                  itemSelect.setChoices(productChoices, 'value', 'label', true);
                  itemRow.style.display = 'block';
              } else if (type === 'categories') {
                  const categoryChoices = categories.map(category => ({
                      value: category._id,
                      label: category.name
                  }));
                  itemSelect.setChoices(categoryChoices, 'value', 'label', true);
                  itemRow.style.display = 'block';
              } else {
                  // Hide the item dropdown if no valid type is selected
                  itemRow.style.display = 'none';
              }
          });
      });
      </script>

    <script>
      const createOfferForm = document.getElementById('createOfferForm');
      const offerName = document.getElementById('offerName');
      const discount = document.getElementById('discount');
      const type = document.getElementById('type');
      const item = document.getElementById('item');

      createOfferForm.addEventListener('submit', (e) => {
      e.preventDefault();

      validateOffer();
      });

      const setError = (element, message) => {
          const formGroup = element.parentElement;
          const errorDisplay = formGroup.querySelector('.errorMsg');
      

      errorDisplay.innerText = message;
      element.classList.add('error');
      errorDisplay.classList.add('error');
      element.classList.remove('success');
      errorDisplay.classList.remove('success');

      }; 

      const setSuccess = (element, message) => {
          const formGroup = element.parentElement;
          const errorDisplay = formGroup.querySelector('.errorMsg');

      errorDisplay.innerText = message;
      element.classList.add('success');
      errorDisplay.classList.add('success');
      element.classList.remove('error');
      errorDisplay.classList.remove('error');

      };

      async function validateOffer () {

      const offerNameValue = offerName.value.trim();
      const discountValue = discount.value.trim();
      const typeValue = type.value.trim();
      const itemValue = Array.from(item.selectedOptions).map(option => option.value);

      let isValid = true;

      if(!offerNameValue) {
          setError(offerName, "*Please enter the offer name");
          isValid = false;
      }
      else {
          setSuccess(offerName, "Name");
      }

      if(!discountValue) {
          setError(discount, "*Please enter the discount rate");
          isValid = false;
      }
      else {
          setSuccess(discount, "Discount");
      }

      if(!typeValue) {
          setError(type, "*Select the offer type");
          isValid = false;
      }
      else {
          setSuccess(type, "Description");
      }

      console.log(itemValue);

      // if (itemValue.length === 0) {
      //   setError(item, "*Select the offer item(s)");
      //   isValid = false;
      // } else {
      //   setSuccess(item, "Item");
      // }

      if(!isValid) {
        return;
      }

      const response = await fetch('/admin/createOffer', {
              method: "POST",
              headers: {
                  'content-type': 'application/json'
              },
              body: JSON.stringify({
                name: offerNameValue,
                discount: discountValue,
                type: typeValue,
                item: itemValue,
              })
          });

          const data = await response.json();

          if(data.success) {
            Swal.fire({
              icon: 'success',
              title: 'Success',
              text: 'Offer created successfully'
            }).then(()=> {
              window.location.href = "/admin/offersAndCoupons";
            });
          }
          else {
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'Error creating offer!'
            })
            window.location.href = "/admin/createOffer";
          }
      }
  </script>

