            <!-- ///////order-details////////// -->
            <div class="container-order-details mx-3 mt-3">
              <div class="top-div d-md-flex align-items-start justify-content-between p-4">
                  <div class="order-details-header">
                      <div class="address-div">
                          <h5>Address:</h5>
                          <p class="text-muted"><%= order.address.fname + ' ' + order.address.lname %> <br>
                              <%= order.address.city + ', ' + order.address.state + ', ' + order.address.country %> <br>
                              <%= order.address.pincode %></p>
                      </div>
                  </div>
                  <div class="price-breakup">
                    <p>Subtotal: &nbsp; &nbsp;₹<%= locals.subtotalBefore ? subtotalBefore.toFixed(2) : '' %><br>
                        Gst (18%): &nbsp; &nbsp;₹<%= locals.gst ? gst.toFixed(2) : '' %><br>
                        <% if (totalDiscount && totalDiscount != null) { %>
                          Discounts: &nbsp; &nbsp;<span class="text-danger">- ₹<%= locals.totalDiscount ? totalDiscount.toFixed(2) : '' %></span><br>
                        <% } %>
                        Shipping: &nbsp; &nbsp;₹<%= locals.shipping ? shipping : '0.00' %><br>
                        <b>Total: &nbsp; &nbsp;₹<%= locals.totalAmount ? totalAmount : '' %></b></p>
                </div>
                  <div class="date-div">
                    <h5>Order Date:</h5>
                    <p class="text-muted"><%= order.orderDate.toDateString() %></p>
                  </div>
                  <h5>Order ID: <%= order.orderId %></h5>
              </div>
          </div>
          <!-- ///////////////////// -->

          <!-- Table -->
          <div class="table-responsive">
            <table id="add-row" class="display table table-striped table-hover">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Quantity</th>
                  <th>Total Price</th>
                  <th>Payment Method</th>
                  <th>Status</th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="category-table-body">
                <% if (order && order !== null) { %>
                  <% order.products.forEach((item, index) => { %>
                    <tr>
                      <td><%= item.product.name %></td>
                      <td><%= item.quantity %></td>
                      <td>₹<%= item.price * item.quantity %></td>
                      <td><%= order.payment.type %></td>
                      <td><%= item.status %></td>
                      <td>
                        <select class="form-select mx-2 <%= item.status === 'cancelled' ? 'd-none' : '' %>" 
                                onchange="updateStatus('<%= order._id %>', '<%= item.product._id %>', this.value)" 
                                <%= item.status !== 'return requested' && item.status === 'delivered' || item.status === 'cancelled' ? 'disabled' : '' %>>
                          <option value="" selected disabled>Status</option>
                          <% if (item.status === 'pending') { %>
                            <option value="dispatched">Dispatched</option>
                            <option value="delivered">Delivered</option>
                          <% } else if (item.status === 'dispatched') { %>
                            <option value="delivered">Delivered</option>
                          <% } else if (item.status === 'return requested') { %>
                            <option value="accept">Accept</option>
                            <option value="reject">Reject</option>
                          <% } %>
                        </select>
                        <button type="button" class="btn btn-primary <%= item.status !== 'cancelled' ? 'd-none' : '' %>" onclick="showModal(<%= index %>)">
                          Details
                        </button>
                      </td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Modals -->
          <% if (order && order !== null) { %>
            <% order.products.forEach((item, index) => { %>
              <div class="modal fade" id="reDetails<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Cancel Details</h5>
                      <button type="button" class="close" onclick="closeModal(<%= index %>)" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <span class="text-muted">Cancellation Reason: <br></span>
                      <span><%= item.cancellationReason %> <br></span>

                      <span class="text-muted"><br>Cancellation Date: <br></span>
                      <span><%= item.cancellationDate !== null ? item.cancellationDate.toDateString() : '' %></span>
                      
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" onclick="closeModal(<%= index %>)">Close</button>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>


