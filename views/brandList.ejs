    <!-- Brand-list-or-unlist -->
    <script>
const brandTableBody = document.getElementById('brand-table-body');
brandTableBody.addEventListener('click', async (event) => {
  if (event.target.id == 'list-btn') {
    event.preventDefault();

    const brandId = event.target.getAttribute('data-brand-id');
    updateBrandListStatus(brandId, false);
  }
  else if(event.target.id == 'unlist-btn'){
    event.preventDefault();

    const brandId = event.target.getAttribute('data-brand-id');
    updateBrandListStatus(brandId, true);
  }
})

async function updateBrandListStatus(brandId, isListed) {
  try {
    const response = await fetch(`/admin/brandListed/${brandId}`, {
      method: "POST",
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ brandId, isListed })
    });
    const data = await response.json();
    if (response.ok) {
      Swal.fire({
        icon: 'success',
        title: 'Success',
        text: data.message
      }).then(() => {
        location.reload();
      });
    } else {
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Something went wrong'
      });
    }
  } catch (error) {
    Swal.fire({
      icon: 'error',
      title: 'Error',
      text: 'An error occurred. Please try again.'
    });
  }
}
    </script>

